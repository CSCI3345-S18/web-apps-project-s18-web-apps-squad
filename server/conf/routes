# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

#Routing information for views to access javascript and CSS files
GET		/assets/*file				controllers.Assets.versioned(path="/public", file: Asset)

# Mockup pages
GET     /                           controllers.MockupController.homePage
 
GET		/home						controllers.MockupController.homePage

GET		/user						controllers.MockupController.userPage(username: String)

GET		/post						controllers.MockupController.postPage

GET		/navLogin					controllers.MockupController.loginPage

GET		/board						controllers.MockupController.boardPage(title: String, desc: String)

# Routes for user login
GET		/login						controllers.MockupController.allUsers

POST	/addUser					controllers.MockupController.addUser

POST	/login						controllers.MockupController.login

GET		/loggedout					controllers.MockupController.logout

POST	/addBoard					controllers.MockupController.addBoard

GET		/allBoards					controllers.MockupController.allBoards

#GET		/profile					controllers.MockupController.getSubs(username: String)

#Post pages

GET		/$board<.*>/posts/:postID		controllers.PostController.viewPost(board, postID)